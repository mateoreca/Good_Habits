<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3E0505">

    <!-- Otros elementos ya existentes -->
    <Button
        android:id="@+id/añadir"
        android:layout_width="155dp"
        android:layout_height="63dp"
        android:textColor="#FFFFFF"
        android:layout_marginStart="128dp"
        android:layout_marginTop="654dp"
        android:backgroundTint="#E22929"
        android:text="Añadir Hábito"
        android:textColorLink="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Hoy, 7/10/24"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/habito1"
        android:layout_width="143dp"
        android:layout_height="61dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="188dp"
        android:gravity="center"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/habito2"
        android:layout_width="143dp"
        android:layout_height="61dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="300dp"
        android:gravity="center"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/habito3"
        android:layout_width="143dp"
        android:layout_height="61dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="420dp"
        android:gravity="center"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/habito4"
        android:layout_width="143dp"
        android:layout_height="61dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="528dp"
        android:gravity="center"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="69dp"
        android:layout_height="64dp"
        android:layout_marginStart="326dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#3E0505"
        android:scaleType="fitCenter"
        android:src="@drawable/usuario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="69dp"
        android:layout_height="63dp"
        android:layout_marginStart="224dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#3E0505"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/calendario" />

    <!-- Contenedor para agregar dinámicamente los hábitos seleccionados -->
    <LinearLayout
        android:id="@+id/habitosContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="733dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
